root = true

# Default for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown and JSON docs: don't trim trailing whitespace (preserve authors' formatting)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.markdown]
trim_trailing_whitespace = false
max_line_length = off

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Locks for generated CDN files - keep their existing formatting
[packages/cdn/**]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
